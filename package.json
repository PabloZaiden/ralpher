{
  "name": "@pablozaiden/ralpher",
  "description": "Ralpher is a web and rest service used to control and manage Ralph Loops in opencode",
  "version": "0.0.0-development",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run tsc; export workspace_dir=$(pwd); (cd /tmp; bun $workspace_dir/src/build.ts)",
    "test": "RALPHER_LOG_LEVEL=fatal bun test --timeout 15000",
    "tsc": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.32",
    "@tailwindcss/typography": "^0.5.19",
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.9.3"
  }
}
